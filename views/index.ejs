<!doctype html>
<html>
  <head>
    <title>Incognito Messenger 2.0</title>
    <style>
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body { font: 13px Helvetica, Arial; }
      form { background: #000; padding: 3px; position: fixed; bottom: 0; width: 100%; }
      form input { border: 1; padding: 10px; width: 90%; margin-right: .5%; }
      form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; }
      #messages { list-style-type: none; margin: 0; padding: 0; }
      #messages li { padding: 5px 10px; }
      #messages li:nth-child(odd) { background: #eee; }
    </style>
  </head>
  <body>
    <ul id="messages" data-username= <%= user.local.userName %>  </ul>
    <form action="">
      <input id="m" autocomplete="off" />
      <input id = "r" autocomplete="off" />
      <button>Send</button>
    </form>
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
    <script>
        $(function () {
          $('body').css('background', 'green');
          var socket = io();
          socket.on('you are connected', payload => {
            socket.emit('introduction', {username : $('#messages').data('username')
          });
          socket.emit('getmessages', {username : $('#messages').data('username')});
          $('form').submit(function(){
            socket.emit('message', {sender: $('#messages').data('username'), receiver: $('#r').val() , message: $('#m').val()});
            $('#m').val('');
            return false;
          });
          socket.on('message', function(msg){
            $('#messages').append($('<li>').text(msg));
          });
          socket.on('retrievedmessages',function(msg){
            console.log(msg);
            msg.forEach(element => {
              $('#messages').append($('<li>').text(element));
            });

          });
          $(window).on('load', function() {
              $('body').css('background', 'yellow');
          });
        });
      })
      </script>
  </body>
</html>